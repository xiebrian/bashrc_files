[global_config]
  suppress_multiple_term_dialog = True
  window_state = 'maximise'
  title_font = "Sans 12"

[keybindings]
  new_tab = <Ctrl>T

  next_tab = <Ctrl>Tab
  prev_tab = <Ctrl><Shift>Tab

  cycle_next = <Ctrl>N
  cycle_prev = <Ctrl>P

  close_window = <Ctrl>Q
  close_term = <Ctrl>W

  reset = <Ctrl>R

[layouts]
  [[default]]
    [[[child1]]]
      parent = window0
      type = Terminal
    [[[window0]]]
      parent = ""
      type = Window
[plugins]
[profiles]
  [[default]]
    background_image = None
    exit_action = exit
    show_titlebar = False
    use_system_font = False
    font = "Mono 13"
    scroll_on_output = False
